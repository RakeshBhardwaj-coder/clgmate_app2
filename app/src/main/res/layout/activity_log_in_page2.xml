<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LogInPage">

    <!--    // aREt = activity register Edit text-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:text="Login"
        android:textColor="#070707"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/aLIPetEmail"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/aLIPetEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/aLIPEtPassword"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="399dp"
        android:layout_marginBottom="284dp"
        android:background="@drawable/input_background"
        android:drawableLeft="@drawable/ic_password"
        android:ems="10"
        android:foregroundGravity="center"
        android:hint="password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aLIPEtBtnLogin"
        android:layout_width="347dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_backg_login"
        android:gravity="center"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aLIPEtPassword"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/aLIPetEmail"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:foregroundGravity="center"
        android:hint="Email"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/aLIPEtPassword"
        app:layout_constraintEnd_toEndOf="@+id/aLIPEtPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/aLIPEtPassword" />

    <TextView
        android:id="@+id/aLIPEt_already_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Already have an account?"
        android:textColor="#E41C1C"
        app:layout_constraintEnd_toEndOf="@+id/aLIPEtBtnLogin"
        app:layout_constraintStart_toStartOf="@+id/aLIPEtBtnLogin"
        app:layout_constraintTop_toBottomOf="@+id/aLIPEtBtnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>