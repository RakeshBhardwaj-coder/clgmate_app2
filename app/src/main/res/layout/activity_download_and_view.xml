<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    tools:context=".DownloadAndViewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/advLlToolbar"
        >
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Syllabus"
            android:titleTextColor="@color/white"
            android:background="@color/primary_color"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_below="@+id/advLlToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"

            >

            <ImageView
                android:id="@+id/ebook"
                android:layout_width="90dp"
                android:layout_height="88dp"
                android:layout_marginStart="10dp"

                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ebook_img" />



                <TextView
                    android:layout_toRightOf="@+id/ebook"
                    android:id="@+id/tvAavaFileName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="serif"
                    android:gravity="center_vertical"
                    android:hint="Heelw"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


        </RelativeLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <Button
                android:id="@+id/btnAavaView"
                android:layout_weight="1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="210dp"
                android:background="#1E88E5"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="view"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:layout_weight="0.5"
                android:id="@+id/btnAavaDownload"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-180dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/view_ebook"
                android:background="#1E88E5"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Download"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll2"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"

            >

            <ImageView
                android:id="@+id/ebook2"
                android:layout_width="90dp"
                android:layout_height="88dp"
                android:layout_marginStart="10dp"

                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ebook_img" />

            <TextView
                android:layout_toRightOf="@+id/ebook2"
                android:id="@+id/tvAavaFileName2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:hint="Heelw"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </RelativeLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <Button
                android:id="@+id/btnAavaView2"
                android:layout_weight="1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="210dp"
                android:background="#1E88E5"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="view"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:layout_weight="0.5"
                android:id="@+id/btnAavaDownload2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-180dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/view_ebook"
                android:background="#1E88E5"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Download"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />


        </LinearLayout>


    </LinearLayout>





</RelativeLayout>